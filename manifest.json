{
  "manifest_version": 3,
  "name": "Naver News Reader",
  "version": "1.2",
  "description": "네이버 뉴스 기사를 읽어서 팝업 창에 출력합니다.",
  "permissions": ["activeTab", "scripting", "http://localhost:3000/*"],
  "host_permissions": ["https://n.news.naver.com/article/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "뉴스 본문 읽기",
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://n.news.naver.com/article/*"],
      "js": ["content.js"]
    }
  ]
}
